# Beispiel-Konfiguration für lokale Entwicklung
# Kopiere diese Datei zu .env und füge deine Werte ein

# Flask
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=app.py

# MySQL
MYSQL_HOST=mysql
MYSQL_USER=demo
MYSQL_PASSWORD=demo
MYSQL_DATABASE=demo
MYSQL_ROOT_PASSWORD=root

# Port
PORT=5002

# DockerHub (nur für lokales Pushen)
DOCKER_USERNAME=your_username
DOCKER_PASSWORD=your_token_here

# Render
RENDER_DEPLOY_HOOK_URL=https://api.render.com/deploy/srv-xxxxx
RENDER_SERVICE_URL=https://m324-app.onrender.com

# Optional: GitHub
GITHUB_TOKEN=ghp_xxxxxxxxxxxxx
